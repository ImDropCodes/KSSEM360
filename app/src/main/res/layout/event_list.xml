<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/event_list_image"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_margin="2dp"
            app:srcCompat="@color/colorAccent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center|top">

            <TextView
                android:id="@+id/event_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:gravity="left"
                android:text="Event Name here"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/event_list_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_below="@id/event_list_name"
                android:gravity="left"
                android:text="event Date"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/event_list_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="left"
                android:layout_below="@id/event_list_date"
                android:text="Department"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/event_list_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_list_department"
                android:layout_margin="2dp"
                android:gravity="left"
                android:text="Venue"
                android:textSize="14sp" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_outline_delete"
                android:layout_alignParentEnd="true"
                android:id="@+id/event_delete_btn"
                android:visibility="gone"
                android:layout_below="@id/event_list_venue"
                android:gravity="bottom" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>