<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Admin.EventDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarSize="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:layout_margin="10dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/colorAccent"
            android:id="@+id/event_detail_activity_event_name"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="8dp"
            app:srcCompat="@color/colorGray"
            android:adjustViewBounds="true"
            android:id="@+id/event_detail_activity_image_view"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGray"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Date"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_margin="2dp"
                    android:id="@+id/event_detail_activity_event_date"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Fee"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/nunito"
                    android:layout_margin="2dp"
                    android:id="@+id/event_detail_activity_event_fee"
                    android:textSize="14sp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="department"
                    android:textColor="@color/colorWhite"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/nunito"
                    android:id="@+id/event_detail_activity_event_department"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Venue"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/nunito"
                    android:id="@+id/event_detail_activity_event_venue"
                    android:textSize="12sp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_margin="8dp"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/colorGray"
               android:padding="5dp"
               android:orientation="vertical">


               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Event Type"
                   android:layout_margin="2dp"
                   android:fontFamily="@font/nunito"
                   android:textColor="@color/colorWhite"
                   android:id="@+id/event_detail_activity_event_type"
                   android:textSize="12sp"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Number of participant"
                   android:layout_margin="2dp"
                   android:textColor="@color/colorWhite"
                   android:fontFamily="@font/nunito"
                   android:id="@+id/event_detail_activity_event_num_participate"
                   android:textSize="12sp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Teaacher Coordinator"
                   android:layout_margin="2dp"
                   android:textColor="@color/colorWhite"
                   android:fontFamily="@font/nunito"
                   android:id="@+id/event_detail_activity_event_teacher"
                   android:textSize="12sp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Student Coordinator"
                   android:layout_margin="2dp"
                   android:textColor="@color/colorWhite"
                   android:fontFamily="@font/nunito"
                   android:id="@+id/event_detail_activity_event_student"
                   android:textSize="12sp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Student Coordinator number"
                   android:layout_margin="2dp"
                   android:textColor="@color/colorWhite"
                   android:fontFamily="@font/nunito"
                   android:id="@+id/event_detail_activity_event_student_number"
                   android:textSize="12sp"/>

           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="8dp">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorGray"
              android:padding="5dp">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Description"
                  android:layout_margin="10dp"
                  android:textColor="@color/colorWhite"
                  android:fontFamily="@font/nunito_semibold"
                  android:id="@+id/event_detail_activity_event_description"
                  android:textSize="12sp"/>

          </RelativeLayout>

       </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Register Now"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/event_detail_activity_register_btn"/>

    </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_event_detail_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_outline_call" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>