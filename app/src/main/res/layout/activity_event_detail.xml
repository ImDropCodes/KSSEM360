<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.EventDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@color/colorWhite"
                    android:id="@+id/event_detail_activity_image_view"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:textStyle="bold"
                    android:layout_margin="2dp"
                    android:id="@+id/event_detail_activity_event_name"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Date"
                    android:layout_margin="2dp"
                    android:id="@+id/event_detail_activity_event_date"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Fee"
                    android:layout_margin="2dp"
                    android:id="@+id/event_detail_activity_event_fee"
                    android:textSize="18sp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="department"
                    android:layout_margin="2dp"
                    android:id="@+id/event_detail_activity_event_department"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Venue"
                    android:layout_margin="2dp"
                    android:id="@+id/event_detail_activity_event_venue"
                    android:textSize="14sp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:elevation="5dp"
           android:layout_margin="5dp"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Event Type"
                   android:layout_margin="2dp"
                   android:id="@+id/event_detail_activity_event_type"
                   android:textSize="14sp"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Number of participate"
                   android:layout_margin="2dp"
                   android:id="@+id/event_detail_activity_event_num_participate"
                   android:textSize="14sp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Teaacher Coordinator"
                   android:layout_margin="2dp"
                   android:id="@+id/event_detail_activity_event_teacher"
                   android:textSize="14sp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Student Coordinator"
                   android:layout_margin="2dp"
                   android:id="@+id/event_detail_activity_event_student"
                   android:textSize="14sp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Student Coordinator number"
                   android:layout_margin="2dp"
                   android:id="@+id/event_detail_activity_event_student_number"
                   android:textSize="14sp"/>

           </LinearLayout>

       </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_margin="2dp"
            android:id="@+id/event_detail_activity_event_description"
            android:textSize="14sp"/>

    </LinearLayout>
</ScrollView>